{
	"name": "CaptainInvert",
	"version": "1.0.0",
	"manifest_version": 2,
	"description": "A chrome extension that can change your website from dark mode to light mode and vice versa! ;) ",
	"background": {
        "scripts": [
            "popup.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "CaptainInvert",
        "default_popup": "popup.html"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}